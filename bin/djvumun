#!/usr/bin/env bash

PASSIM_HOME="$(cd "`dirname "$0"`"/..; pwd)"

SPARK_SUBMIT_ARGS="$SPARK_SUBMIT_ARGS"

spark-submit --class vtpassim.DjVu \
	     --packages 'com.github.scopt:scopt_2.10:3.3.0' \
	     --packages 'com.databricks:spark-xml_2.10:0.3.3' \
	     $SPARK_SUBMIT_ARGS \
	     "$PASSIM_HOME"/target/scala-2.10/vtpassim_2.10-0.1.0.jar "$@"
